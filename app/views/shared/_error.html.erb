<% if flash[:error].present? %>
  <div class="error_main">
    <p><%= flash[:error].count %>つのエラーが発生しました</p>
    <% flash[:error].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </div>
<% end %>

<% if flash[:form_error]&.any? %>
  <div class="error_main">
    <p><%= flash[:form_error].count %>つのエラーが発生しました</p>
    <% flash[:form_error].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </div>
<% end %>

<% if object&.errors&.any? %>
  <div class="error_main">
    <p><%= object.errors.count %>つのエラーが発生しました</p>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </div>
<% end %>